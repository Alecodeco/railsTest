<h2 class="center">All Alpha Bloggers</h2>
<div class="pagination">
  <%= will_paginate @user %>
</div>
<% @user.each do |user| %>
  <div class="card listing" style="list-style-type:none">
    <div class="card-body">
      <div class="card-title">
        <%= link_to gravatar_for(user, 80), user_path(user) %>
        <%= link_to user.username, user_path(user), id:"users-card-title" %>
      </div>
      <div class="card-footer center" id="users-card-footer">
        <small>
          <%= pluralize(user.articles.count, "article") if user.articles %> posted so far.
          <% if logged_in? && current_user.admin? %>
            <hr>
            <%= link_to "DELETE USER", user_path(user), class:"btn btn-danger btn-sm", method: :delete, data: { confirm: "Sure ?"} %>
          <% end %>
        </small>
      </div>
    </div>
  </div>
<% end %>
<div class="pagination">
  <%= will_paginate @user %>
</div>
