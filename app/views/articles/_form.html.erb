<%= render 'shared/errors', obj: @article %>
<br>

<div class="center">
  <%= form_for @article do |f| %>
    <div class="form-group row">
      <div class="col-md-2 col-form-label">
        <%= f.label :title %>
      </div>
      <div class="col-md-8 mx-2">
        <%= f.text_field :title, class: 'form-control', placeholder: 'Title of article', autofocus: 'true' %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-md-2 col-form-label">
        <%= f.label :description %>
      </div>
      <div class="col-md-8 mx-2">
        <%= f.text_area :description, rows: 8, class: 'form-control', placeholder: 'Description of article' %>
      </div>
    </div>
    <div class="form-row align-items-center">
      <div class="col-md-8 mx-auto">
        <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
        <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "mr-1 checkbox") + cb.text} %>
        <% end %>
      </div>
    </div>
    <br>
    <div class="form-group">
      <%= f.submit class: 'btn btn-primary btn-md mx-auto' %>
    </div>
    <div class="form-group">
      <%= link_to "Cancel and return", articles_path %>
    </div>
  <% end %>
</div>
